<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/favoriteItemImg"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/alig"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_marginStart="156dp"
        android:layout_marginEnd="16dp"
        android:baselineAligned="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/favoriteItemImg"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/favoriteItemTitleLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/favoriteItemSubtitleLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_light"
            android:text="Lorem ipsum dolor (2001)"
            android:textColor="@color/gray_600" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>