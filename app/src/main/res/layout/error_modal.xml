<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="450dp"
    android:background="@drawable/modal_rounded">

    <TextView
        android:id="@+id/errorModalTitleLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginBottom="228dp"
        android:fontFamily="@font/inter_bold"
        android:text="Error"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/closeErrorBtn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_error_rounded"
        android:fontFamily="@font/inter_semibold"
        android:text="Aceptar"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/errorModalImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/errorModalTitleLbl"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/error256" />

    <TextView
        android:id="@+id/errorModalMessageLbl"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/inter_light"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/closeErrorBtn"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>