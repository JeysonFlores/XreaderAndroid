<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loginHeaderDiv"
        android:layout_width="match_parent"
        android:layout_height="245dp">

        <TextView
            android:id="@+id/loginTitleLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="136dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/iniciar_sesi_n"
            android:textColor="@color/white"
            android:textColorHint="@color/accent_200"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/loginDescriptionLbl"
            android:layout_width="299dp"
            android:layout_height="96dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/inter_medium"
            android:text="@string/inicia_sesion_en_tu_cuenta_para_disfrutar_de_nuestro_servicio_de_novelas"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loginFormDiv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/loginUserTxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/gray_entry"
            android:drawableLeft="@drawable/user24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/inter_light"
            android:hint="@string/usuario"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:textColor="@color/accent"
            android:textColorHint="@color/accent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/loginPasswordTxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/gray_entry"
            android:drawableLeft="@drawable/key24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/inter_light"
            android:hint="@string/contrase_a"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="@color/accent"
            android:textColorHint="@color/accent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginUserTxt" />

        <Button
            android:id="@+id/loginLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/primary_button"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/iniciar_sesi_n"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginPasswordTxt" />

        <Button
            android:id="@+id/loginToSignupBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/white_button"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/crear_cuenta"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/accent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginLoginBtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>