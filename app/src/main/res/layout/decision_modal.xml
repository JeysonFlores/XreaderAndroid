<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    android:layout_height="450dp"
    android:background="@drawable/modal_rounded">

    <ImageView
        android:id="@+id/decisionModalImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/decisionModalTitleLbl"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/question256" />

    <TextView
        android:id="@+id/decisionModalTitleLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="232dp"
        android:fontFamily="@font/inter_bold"
        android:text="Â¿Alguna pregunta?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/decisionModalMessageLbl"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/inter_light"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decisionModalTitleLbl" />

    <Button
        android:id="@+id/decisionModalAgreeBtn"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="29dp"
        android:fontFamily="@font/inter_semibold"
        android:background="@drawable/button_success_rounded"
        android:text="Aceptar"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/decisionModalCancelBtn"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="29dp"
        android:fontFamily="@font/inter_semibold"
        android:textAllCaps="false"
        android:background="@drawable/button_error_rounded"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>